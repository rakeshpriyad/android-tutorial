<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:scrollbarAlwaysDrawVerticalTrack="true">

    <TableRow>

        <TextView
            android:id="@+id/text_id1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Welcome to Intellizone"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:textSize="20dp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/intellizone_banner" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/text_id3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="We provide Industry level traingin on following topic: "
            android:textColor="@android:color/holo_green_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:textSize="14dp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow>

        <ExpandableListView
            android:id="@+id/lvIzoneExp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:dividerHeight=".25dp"
            />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/text_id2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Why Intellizone?"
            android:textColor="@android:color/holo_green_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:textSize="15dp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:headerDividersEnabled="true"
            android:listSelector="@android:color/transparent" />

    </TableRow>


</TableLayout>